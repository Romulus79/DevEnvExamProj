@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Skills & Rols Employee Management</h1>
    <p class="lead">
        Welcome to the Employee Management application. Here you can add your company
        and track your employees details regarding their roles and skills in the company
    </p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Sign Up and Register your Company!</h2>
        <p>
            Here you can register your company if you are authenticated as Admin!
        </p>
        <p>
            @Html.ActionLink("Sign up/Register Company \u00BB", "Create", "Company", null, new { @class = "btn btn-primary" })
        </p>
        <p>
            @Html.ActionLink("Go to Company Page", "Index", "CompaniesRolesMV")
        </p>

    </div>
    @*<a class="btn btn-primary" href="">*@
    <div class="col-md-6">
        <h2>Register new Employee!</h2>
        <p>Here you can register as employee for your company!</p>
        <p>
            @Html.ActionLink("Sign up/Register Employee \u00BB", "Create", "Employee", null, new { @class = "btn btn-primary" })
        </p>
    </div>

</div>