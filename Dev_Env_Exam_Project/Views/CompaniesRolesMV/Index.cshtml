@using Dev_Env_Exam_Project.Models
@model CompanyRoleViewModel

@{
    ViewBag.Title = "Company Profile";
}

<br/><br/>
<h2>Company Profile Page</h2>
<hr/>
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div>
    <h4>Company Logo:</h4>
</div>

@{
    IEnumerable<string> file = Directory.EnumerateFiles(Server.MapPath("~/CompanyLogo/"));

    foreach (var path in file)
    {
        var fileName = Path.GetFileName(path);
        <img src="~/CompanyLogo/@fileName" width="200" height="100" />
    }
} 
<br/>
<h3>Company Details</h3>
<hr/>

<table class="table table-striped table-hover table-responsive">
    <tr style="font-size:20px">
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
           Phone Number
        </th>
        <th>
            Email
        </th>
        <th>
            Options
        </th>
    </tr>

    @foreach (Company company in Model.Companies)
    {
        <tr >
            <td>
                @company.Name
            </td>
            <td class="col-md-4">
                @company.Address
            </td>
            <td>
                @company.PhoneNo
            </td>
            <td>
                @company.Email
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Company", new { id = company.CompanyId }, null)&emsp;|&emsp;
                @Html.ActionLink("Details", "Details", "Company", new { id = company.CompanyId }, null)&emsp;|&emsp;
                @Html.ActionLink("Delete", "Delete", "Company", new { id = company.CompanyId }, null)
            </td>
        </tr>
    }

</table>

<br/><br/><br/>

<h3>Roles</h3>
<hr/>
<p>
    @Html.ActionLink("Create New", "Create", "Roles")
</p>
<table id="company_table" class="table table-striped table-hover table-responsive">
    <tr style="font-size:20px">
        <th class="col-md-2">
          Name
        </th>
        <th class="col-md-6">
           Description
        </th>
        <th>
            Options
        </th>
    </tr>

    @foreach (Role role in Model.Roles)
    {
        <tr>
            <td>
                @role.Name
            </td>
            <td>
                    @role.Description
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Roles", new { id = role.RoleId }, null) &emsp;|&emsp;
                @Html.ActionLink("Details", "Details", "Roles", new { id = role.RoleId }, null) &emsp;|&emsp;
                @Html.ActionLink("Delete", "Delete", "Roles", new { id = role.RoleId }, null)
            </td>
        </tr>
    }

</table>